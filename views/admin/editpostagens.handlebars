{{#each erros}}
    <div class="alert alert-danger">{{ texto }}</div>
{{else}}

{{/each}}
<h3 class="py-1">Editar postagem:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST" class="form-postagem">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="nome">Nome: </label>
            <input type="text" class="form-control" id="titulo" name="titulo" value="{{ postagem.titulo }}">
            <label for="slug">Slug: </label>
            <input type="text" class="form-control" id="slug" name="slug" value="{{ postagem.slug }}">
            <label for="slug">Descrição: </label>
            <input type="text" class="form-control" id="descricao" name="descricao" value="{{ postagem.descricao }}">
            <label for="slug">Conteúdo: </label>
            <textarea class="form-control" id="conteudo" name="conteudo" rows="5">{{ postagem.conteudo }}</textarea>
            <label for="slug">Categoria: </label>
            <select class="form-control" name="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma postagem resgistrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">
                Salvar
               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2" viewBox="0 0 16 16">
                    <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                </svg>
            </button>
        </form>
    </div>
</div>