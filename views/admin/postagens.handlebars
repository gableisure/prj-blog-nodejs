<h2 class="title-page">Lista de postagens: </h2>
<hr>
<div class="d-flex flex-row-reverse">
    <a href="/admin/postagens/add">
        <button class="btn btn-outline-light">
            Nova postagem
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
        </button>
    </a>
</div>
{{#each postagens}}
    <div class="card my-2">
        <div class="card-body">
            <h4>{{ titulo }}</h4>
            <small><span class="text-secondary">Categoria:</span> {{ categoria.nome }}</small><br>
            <small><span class="text-secondary">Slug:</span> {{ slug }}</small><br>
            <small><span class="text-secondary">Descrição:</span> {{ descricao }}</small><br>
            <small><span class="text-secondary">Conteúdo:</span> {{ conteudo }}</small><br>
            <small><span class="text-secondary">Atualização: {{ date }}</span></small><br>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-row justify-content-end">
                    <a href="/admin/postagens/edit/{{_id}}">
                        <button class="btn-action btn border-0 btn-sm my-2 mx-2 text-muted"> 
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                            </svg>
                        </button>
                    </a>
                    <a href="/admin/postagens/deletar/{{_id}}">
                        <button class="btn-action btn border-0 btn-sm my-2 mx-2 text-muted"> 
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                            </svg>
                        </button>
                    </a>
                </div>
            </div>
            {{!-- <div class="col">
                <small style="display: none;" class="justify-content-end text-muted">{{ date }}</small>
            </div> --}}
        </div>
        
    </div>
{{else}}
    <h4 class="mt-3 text-light">Nenhuma postagem registrada!</h4>
{{/each}}